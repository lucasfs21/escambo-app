<% page_title = "Categorias" %>
<%= render partial: "layouts/backoffice_shared/page_title", locals: {page_title: page_title} %>
        <div class="row">
          <div class="col-lg-6">
                  <div class="panel panel-default">
                      <div class="panel-heading">
                          Categorias
                          <%= link_to new_backoffice_category_path, type: "button",
                              class:"btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                            <i class="fa fa-plus"></i>
                          <% end %>
                      </div>
                      <!-- /.panel-heading -->
                      <div class="panel-body">
                          <div class="table-responsive">
                              <table class="table table-striped table-bordered table-hover">
                                  <thead>
                                      <tr>
                                          <th>#</th>
                                          <th>Descrição</th>
                                          <th>Ações</th>
                                      </tr>
                                  </thead>
                                  <tbody>
                                      <% @categories.each do |category| %>
                                      <tr>
                                          <td><%= category.id %></td>
                                          <td><%= category.description %></td>
                                          <td>
                                            <%= link_to edit_backoffice_category_path(category.id), class: "btn btn-primary btn-circle",
                                            	  type: "button" do %>
                                                <i class="fa fa-edit"></i>
                                            <% end %>
                                            <button type="button" class="btn btn-danger btn-circle" disabled="true"><i class="fa fa-minus"></i>
                                            </button>
                                          </td>
                                      </tr>
                                      <% end %>
                                  </tbody>
                              </table>
                          </div>
                          <!-- /.table-responsive -->
                      </div>
                      <!-- /.panel-body -->
                  </div>
                  <!-- /.panel -->
              </div>
              <!-- /.col-lg-6 -->
        </div>
        <!-- /.row -->
