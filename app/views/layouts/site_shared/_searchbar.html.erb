<%= form_tag site_search_path, method: :get do %>
  <div class="col-md-12">
    <div class="row">
      <div class="well well-sm">
          <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
              <div class="input-group">
                <%= text_field_tag(:q, params[:q], {class:"form-control", placeholder: "Pesquisar por..."}) %>
                <span class="input-group-btn">
                  <%= submit_tag("Pesquisar", class: "btn btn-default") %>
                </span>
              </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
          </div><!-- /.row -->
        </div>
    </div>
  </div>
<% end %>
