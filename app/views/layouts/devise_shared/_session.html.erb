<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
                <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
            </div>
            <div style="padding-top:30px" class="panel-body" >
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                    html: { role: "form", class: "form-horizontal" }) do |f| %>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                            class:"form-control", placeholder: "Email", type: "text"  %>
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <%= f.password_field :password, autocomplete: "current-password",
                            class: "form-control", placeholder: "Password", type: "password" %>
                    </div>

                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                              <% if devise_mapping.rememberable? %>
                                  <%= f.check_box :remember_me %>
                                      Remember Me
                              <% end %>
                            </label>
                        </div>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                    <!-- Button -->
                        <div class="col-sm-12 controls">
                            <%= f.submit "Log in", class: "btn btn-success" %>
                            <a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                Don't have an account!
                                <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                Sign Up Here
                                </a>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
                        <fieldset>
                            <div class="form-group">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                    class:"form-control", placeholder: "E-mail", type: "email"  %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password, autocomplete: "current-password",
                                    class: "form-control", placeholder: "Password", type: "password" %>
                            </div>
                            <% if devise_mapping.rememberable? %>
                                <div class="checkbox">
                                    <label>
                                        <%= f.check_box :remember_me %>
                                        Remember Me
                                    </label>
                                </div>
                            <% end %>
                            <!-- Change this to a button or input when using this as a form -->
                            <div class="actions">
                              <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
                            </div>
                        </fieldset>
                    <% end %>
                    <%= render "admins/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>

<% flash.each do |key, value| %>
        <%= javascript_tag "$.notify( { message: '#{value}'},
            { type: 'danger', placement: { from: 'top', align: 'center'}});" %>
<% end %>
