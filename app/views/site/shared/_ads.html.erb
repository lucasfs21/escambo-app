<div class="row">
    <% @ads.each do |ad| %>
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <%= image_tag ad.picture.url(:medium) %>
                <div class="caption" style="height: 100px">
                    <h4 class="pull-right"><%= humanized_money_with_symbol ad.price %></h4>
                    <h4>
                      <%= link_to truncate(ad.title, length: 17), site_ad_detail_path(ad),
                          remote: true, data: { push: :partial} %>
                    </h4>
                    <%= truncate(ad.description_short, length: 100) %>
                    <!--p>See more snippets like this online store item at <a target="_blank" href="http://www.bootsnipp.com">Bootsnipp - http://bootsnipp.com</a>.</p-->
                </div>
                <div class="ratings">
                    <p class="pull-right"><%= ad.rates('quality').count %> avaliações</p>
                    <p>
                        <%= rating_for ad, 'quality' %>
                    </p>
                </div>
            </div>
        </div>
    <% end %>
</div>
<div class="row">
  <div class="text-center">
    <%= paginate @ads %>
  </div>
</div>
